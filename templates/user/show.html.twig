{% extends 'base.html.twig' %}

{% block title %}
    Utilisateur {{ user.username }} |
    {{ parent() }}
{% endblock %}

{% block content %}
    <h1>{{ user.username }}</h1>

    <section class="grid grid-gap-40 table-box">
        <table class="table bg-white">
            <tbody>
            <tr class="tr">
                <th class="th">Id</th>
                <td class="td">{{ user.id }}</td>
            </tr>
            <tr class="tr">
                <th class="th">Email</th>
                <td class="td">{{ user.email }}</td>
            </tr>
            <tr class="tr">
                <th class="th">Roles</th>
                <td class="td">{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
            <tr class="tr">
                <th class="th">Pseudo</th>
                <td class="td">{{ user.username }}</td>
            </tr>
            <tr class="tr">
                <th class="th">Nom</th>
                <td class="td">{{ user.lastname }}</td>
            </tr>
            <tr class="tr">
                <th class="th">Prénom</th>
                <td class="td">{{ user.firstname }}</td>
            </tr>
            </tbody>
        </table>
    </section>

    <section class="grid grid-gap-40 jc-center mt-4">
        <a href="{{ path('admin_users') }}" class="button-primary">Retour à la liste</a>

        <a href="{{ path('admin_user_edit', {'id': user.id}) }}" class="button-primary">Editer</a>

        {{ include('user/_delete_form.html.twig') }}
    </section>
{% endblock %}
