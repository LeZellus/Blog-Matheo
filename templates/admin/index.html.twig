{# templates/admin/index.html.twig #}

{% extends "base.html.twig" %}

{% block title %}Admin. | {{ parent() }}{% endblock %}

{% block content %}
    <h1>Page d'administration</h1>

    <section class="grid grid-gap-40 jc-center mt-4">
        <a class="button-primary" href="{{ path('admin_users') }}">Utilisateurs</a>
        <a class="button-primary" href="{{ path('blog_add') }}">Nouvel article</a>
    </section>

    <section class="grid grid-gap-40 table-box">
        <h2 class="mt-4">Articles</h2>
        <table class="table bg-white">
            <thead>
            <tr class="tr">
                <td class="td">Titre</td>
                <td class="td">Description</td>
                <td class="td">Creation</td>
                <td class="td">Modification</td>
                <td class="td">Actions</td>
            </tr>
            </thead>

            <tbody>
            {% for article in articles %}
                <tr class="tr">
                    <td class="td td-title">
                        <a href="{{ path('blog_show', {'id': article.id}) }}">{{ article.title }}</a>
                    </td>
                    <td class="td td-desc">{{ article.chapo }}</td>
                    <td class="td td-created">{{ article.publishedAt|date("m/d/Y") }}</td>
                    <td class="td td-updated">{{ article.updatedAt|date("m/d/Y") }}</td>
                    <td class="td td-actions">
                        <a href="{{ path('blog_edit', {'id': article.id}) }}">üñä</a>
                        <a href="{{ path('blog_remove', {'id': article.id}) }}">‚ùå</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </section>

    <section class="grid grid-gap-40 table-box">
        <h2 class="mt-4">Commentaire(s) en attente</h2>
        <table class="table bg-white">
            <thead>
            <tr class="tr tr-menu">
                <td class="td">Pseudo</td>
                <td class="td">Message</td>
                <td class="td">Date</td>
                <td class="td">Actions</td>
            </tr>
            </thead>

            <tbody>
            {% for comment in comments %}
                {% if comment.isValid == 0 %}
                    <tr class="tr">
                        <td class="td td-title">{{ comment.author }}</td>
                        <td class="td">{{ comment.content }}</td>
                        <td class="td td-created"></td>
                        <td class="td td-actions">
                            <a href="{{ path('comment_valid', {'id': comment.id}) }}">
                                ‚úÖ
                            </a>
                            <a href="{{ path('comment_remove', {'id': comment.id}) }}">
                                ‚ùå
                            </a>
                        </td>
                    </tr>
                {% endif %}
            {% endfor %}
            </tbody>
        </table>
    </section>


    <section class="grid grid-gap-40 table-box">
        <h2 class="mt-4">Utilisateurs</h2>
        <table class="table bg-white">
            <thead>
            <tr class="tr tr-menu">
                <td class="td">Pseudo</td>
                <td class="td">Date</td>
                <td class="td">Actions</td>
            </tr>
            </thead>
            <tbody>
            {% for user in users %}
                <tr class="tr">
                    <td class="td td-title">{{ user.username }}</td>
                    <td class="td">
                        {% if is_granted('ROLE_ADMIN') %}
                            User
                        {% else %}
                            Admin
                        {% endif %}
                    </td>
                    <td class="td td-actions">
                        <a href="{{ path('blog_edit', {'id': user.id}) }}">Supprimer</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </section>
{% endblock %}