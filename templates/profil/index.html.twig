{% extends 'base.html.twig' %}

{% block title %}Profil |
    {{ parent() }}{% endblock %}

{% block content %}
    <main class="total-flex m-h">
        <h1 class="mb-4">Profil</h1>
        <section class="grid grid-gap-40 profil bg-white">
            <img src="/uploads/LeZellus.gif" alt="Logo Mathéo" class="logo">
            <div class="grid grid-gap-20">
                <h2>{{ app.user.firstname }}</h2>
                <p>Prénom : {{ app.user.firstname }}</p>
                <p>Nom : {{ app.user.lastname }}</p>
                <p>Email : {{ app.user.email }}</p>
            </div>

            <div class="grid grid-gap-20 button-box">
                <a class="button-primary" href="{{ path("profil_password_update") }}">Modifier mon mot de passe</a>
                <a class="button-primary" href="{{ path("profil_remove") }}">Supprimer mon compte</a>
            </div>
        </section>
    </main>
{% endblock %}
